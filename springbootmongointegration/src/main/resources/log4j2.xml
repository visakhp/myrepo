<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info">
    <Properties>
        <Property name="basePath">/springboot/log</Property>
    </Properties>
 
    <Appenders>
        <RollingFile name="springbootlogger" fileName="${sys:basePath}/springboot.log" filePattern="${sys:basePath}/springboot-%d{MM-dd-yyyy}-%i.log" append="true">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss,SSS z} [%p] [%c] [%t] %m%n" />
        	<Policies>
				<TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
    </Appenders>
    <Loggers>
    	<!-- hibernate logging --> 
        <!-- <Logger name="org.hibernate.type" level="trace" additivity="false">
            <appender-ref ref="springbootlogger" level="trace" />
        </Logger> -->    	
    	
        <Logger name="org.hibernate" level="info" additivity="false">
            <appender-ref ref="springbootlogger" level="info" />
        </Logger>
        
        <!-- spring logging -->
        <Logger name="org.springframework" level="info" additivity="false">
            <appender-ref ref="springbootlogger" level="info" />
        </Logger>
        
        <!-- mongo logging -->
        <Logger name="org.mongo" level="info" additivity="false">
            <appender-ref ref="springbootlogger" level="info" />
        </Logger>


        <!-- jboss logging -->
        <Logger name="org.jboss" level="info" additivity="false">
            <appender-ref ref="springbootlogger" level="info" />
        </Logger>
        
        <!-- jackson json logging -->
        <Logger name="com.fasterxml" level="info" additivity="false">
            <appender-ref ref="springbootlogger" level="info" />
        </Logger>


        <!-- application logging -->
        <Logger name="org.spring.boot.integration" level="info" additivity="false">
            <appender-ref ref="springbootlogger" level="info" />
        </Logger>

        <Root level="info" additivity="false">
            <appender-ref ref="springbootlogger" />
        </Root>
    </Loggers>
</Configuration>